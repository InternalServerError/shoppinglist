    <EditText
        android:id="@+id/new_shopping_list_new_product_name"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:hint="Nom du produit"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_new_product_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_shopping_list_new_product_categories"
        android:layout_marginTop="15dp" />
    <Spinner
        android:id="@+id/new_shopping_list_new_product_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_new_product_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/new_shopping_list_new_product_quantity"
        app:layout_constraintBottom_toTopOf="@id/new_shopping_list_new_product_button"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" />
    <Spinner
        android:id="@+id/new_shopping_list_new_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/product_quantities"
        app:layout_constraintBottom_toTopOf="@id/new_shopping_list_new_product_button"
        app:layout_constraintLeft_toRightOf="@id/new_shopping_list_new_product_categories"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_new_product_name"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" />
    <ImageButton
        android:id="@+id/new_shopping_list_new_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_white_24dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_new_product_quantity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_shopping_list_products_label"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="none"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/new_shopping_list_products_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produits dans la liste"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_new_product_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_shopping_list_products_recycler_view" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/new_shopping_list_products_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_products_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" /> -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/new_shopping_list_categories_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/new_shopping_list_categories_add_category_linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:listitem="@layout/new_shopping_list_categories_recycler_view_item"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_shopping_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_all_white_24dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>